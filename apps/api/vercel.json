{
  "version": 2,
  "buildCommand": "npx prisma generate && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/health", "destination": "/api/health.js" },
    { "source": "/api/v1/health", "destination": "/api/health.js" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 5
    },
    "api/index.js": {
      "includeFiles": "dist/**",
      "maxDuration": 30
    }
  }
}
